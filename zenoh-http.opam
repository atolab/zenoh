opam-version: "2.0"
maintainer:   ["zenoh@adlink-labs.tech"]
authors:      ["Angelo Corsaro" "Olivier Hecart" "Julien Enoch"]
homepage:     "https://zenoh.io"
bug-reports:  "https://github.com/atolab/zenoh/issues/"
dev-repo:     "git+https://github.com/atolab/zenoh.git"
tags:         ["zenoh"]

version:"0.4.0"
license: ["EPL-2.0" "Apache-2.0"]

build: [
["dune" "subst"] {pinned}
 ["dune" "-p" name "-j" jobs]
]

install: [
  ["dune" "build" "-p" name "@install"]
  ["dune" "install" name]
]

depends: [
  "ocaml" {>= "4.03.0" }
  "dune"
  "lwt" {>= "4.1.0" & < "5.0.0"}
  "zenoh-router" {= "0.4.0"}
  "httpaf" {>= "0.6.0"}
  "httpaf-lwt-unix" {>= "0.6.0"}
  "ocp-ocamlres" {>= "0.4"}
  "dynload-sys"
]
synopsis : "The zenoh http plugin"
description: """
zenoh is a high-level and extremely wire-efficient named-data protocol
that nicely combines data streaming with distributed data quering.
This package provides the zenoh router as a library."""
